<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mpesa.ClosingCash">

    <EditText
        android:id="@+id/editText_closingFloat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Closing Float"
        android:inputType="number"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Calculate"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/editText_closingFloat"
        app:layout_constraintStart_toStartOf="@+id/editText_closingFloat"
        app:layout_constraintTop_toBottomOf="@+id/editText_closingFloat" />

    <TextView
        android:id="@+id/textView_closing_cash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Closing Cash"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/editText_closingFloat"
        app:layout_constraintStart_toStartOf="@+id/editText_closingFloat"
        app:layout_constraintTop_toBottomOf="@+id/button_calculate" />
</android.support.constraint.ConstraintLayout>